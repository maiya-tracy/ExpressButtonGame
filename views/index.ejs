<html>

<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
  <script type="text/javascript">
    $(document).ready(function() {

      var socket = io();

      $('#submitbtn').click(function() {
        // console.log("welcome cameron");
        socket.emit('receivingclick')
      });
      $('#clearbtn').click(function() {
        // console.log("goodbye cameron");
        socket.emit('clearingclick')
      });
      socket.on('updateAllClients', function(data) {
        // console.log("hahahhahaa");
        // console.log(data.count);
        $('.magicbox').text("The button has been pushed " + data.count + " time(s)")
      });
    })
  </script>
</head>

<body>
  <div class="container">
    <p class="magicbox" name="magicbox" id="magicbox"></p>
    <input name="submitbtn" id="submitbtn" class="btn btn-outline-primary" type='submit' value='push the epic button'>
    <input name="clearbtn" id="clearbtn" class="btn btn-outline-warning" type='submit' value='reset count'>
  </div>
</body>

</html>
